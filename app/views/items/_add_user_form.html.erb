<!-- Add user to item form -->

<%= form_tag add_user_group_item_url(@group, @item), remote: true do %>
  <%= render "layouts/form_errors", errors: @new_partition.errors %>

  <div class="form-group">
    <%= text_field_tag :email, nil, placeholder: "User Email", class: "form-control" %>
  </div>
  
  <%= submit_tag "Add User", remote: true, class: "btn btn-default" %>
<% end %>


