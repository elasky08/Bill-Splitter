<table class="table table-bordered table-condensed" >
  <thead>
    <tr>
      <th>Item Name</th>
      <th>Cost</th>
      <th class="span2"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= number_to_currency(item.cost, :unit => "$") %></td>
        <td>
          <%= link_to glyph(:edit), edit_group_item_url(@group, item), remote: true, :class => 'btn btn-default btn-lg' %>
          <%= link_to glyph(:user), group_item_users_url(@group, item), remote: true, :class => 'btn btn-default btn-lg' %>
          <%= link_to glyph(:remove), group_item_url(@group, item), method: :delete, :class => 'btn btn-danger btn-lg' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
