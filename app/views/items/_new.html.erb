<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  <h4 class="modal-title">New Item</h4>
</div>      

<%= form_for @new_item, url: group_item_url(@group, @new_item), html: { class: 'form', id: "add-item" } do |f| %>
  <div class="modal-body">

    <% if @new_item.errors.any? %>
      <ul class="validation-errors unstyled">
        <% @group.errors.full_messages.each do |msg| %>
          <li>
            <div class="alert alert-error">msg</div>
          </li>
        <% end %>
      </ul>
    <% end %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: "Item Name" %>
    </div>

    <div class="form-group">
      <%= f.label :cost %>
      <div class="input-prepend">
        <span class="add-on">$</span>
        <%= f.text_field :cost, placeholder: "0.00", class: "form-control" %>
      </div>
    </div>

    <div class="modal-footer">
      <button class="btn btn-default" data-dismiss="modal">Cancel</button>
      <%= f.submit "Add", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

