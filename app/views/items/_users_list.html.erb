<% @item.users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td>
      <%= link_to glyph(:remove), remove_user_group_item_url(@group, @item), user_id: user.id, :class => 'btn btn-danger btn-lg' %>
    </td>
  </tr>
<% end %>