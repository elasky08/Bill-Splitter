<!-- List users associated with item. Table rows. -->

<% @item.users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td>
      <div class="pagination-centered">
        <%= link_to glyph(:remove), remove_user_group_item_url(@group, @item, user_id: user.id), remote: true %>
      </div>
    </td>
  </tr>
<% end %>