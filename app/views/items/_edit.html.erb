<div class="modal fade" id="edit-group-name", role="dialog" aria-hidden="true" >
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Edit Item</h4>
      </div>      

      <%= form_for @item, html: { class: 'form-inline', id: "add-item" } do |f| %>
        <% if @item.errors.any? %>
          <ul class="validation-errors unstyled">
            <% @group.errors.full_messages.each do |msg| %>
              <h5><%= content_tag :li, msg, class: "text-error" %>
            <% end %>
          </ul>
        <% end %>


        <%= f.text_field :name, placeholder: "Item Name" %>
        <div class="input-prepend">
          <span class="add-on">$</span>
          <%= f.text_field :cost, placeholder: "0.00" %>
        </div>

        <div class="modal-footer">
          <button class="btn btn-default" data-dismiss="modal">Cancel</button>
          <%= f.submit "Add", class: "btn btn-primary" %>
          
          <div class="alert alert-error" id="add-item-error"></div>
        </div>
      <% end %>

      </div>
  </div>
</div>