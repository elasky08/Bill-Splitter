<!-- List of groups page -->

<div class="page-header">
    <h1>Groups</h1>
</div>

<!-- List of groups -->
<table class="table table-hover table-bordered" id="groups-list" >
  <thead>
    <tr>
      <th>Name</th>
      <th>Owner</th>
      <th class="span1"></th>
    </tr>
  </thead>
  <tbody>
    <%= render "list" %>
  </tbody>
</table>

<%= link_to "Create a Group", "#new_group", class: "btn btn-large btn-primary", id: "create-group-link" %>

<!-- New group modal -->
<%= render "layouts/modal_form", modal_id: "new-group-modal", modal_title: "New Group", modal_data: { form: "reset" }, modal_content: "groups/new_form" %>
