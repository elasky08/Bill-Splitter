<%- model_class = Group -%>
<div class="page-header">
    <h1>Groups</h1>
</div>

<table class="table table-hover table-bordered" data-provides="rowlink" >
  <thead>
    <tr>
      <th>Name</th>
      <th>Owner</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td>
          <%= link_to group_url(group), class: "list-group-item" do %>
            <%= group.name.split(' ').map(&:capitalize).join(' ') %>
          <% end %>
        </td>
        <td><%= group.owner.name %></td>
        <td class="span1"><%= link_to glyph(:remove), group_url(group), method: :delete, type: 'button', data: { confirm: 'Are you sure you want to delete this group?' }, class: 'btn btn-default btn-lg', data: {dismiss: "modal"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div id="create-group">
  <%= link_to "Create a Group", new_group_url, class: "btn btn-large btn-primary", remote: true %>
</div>


