<h2>Welcome to BillSplitter</h2>

<table class="table table-hover">
  <% @groups.each do |group| %>
    <%= link_to group_url(group) do %>
      <tr>
        <%= content_tag :td, group.name %>
        <td>

          <%= button_to group_url(group), method: :delete, type: 'button', data: { confirm: 'Are you sure you want to delete this group?' }, class: 'btn btn-default btn-lg', data: {dismiss: "modal"} do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>

        </td>
      </tr>
    <% end %>
  <% end %>
</table>

<div id="create-group">
  <%= link_to "Create a Group", new_group_url, class: "btn btn-large btn-primary", remote: true %>
</div>

<button type="button" class="btn btn-default btn-lg">
  <span class="glyphicon glyphicon-star"></span> Star
</button>


