<!-- List of groups. Table rows -->

<% @groups.each do |group| %>
  <tr>
    <td>
      <%= link_to group_url(group), class: "list-group-item" do %>
        <%= group.name %>
      <% end %>
    </td>
    <td><%= group.owner.name %></td>
    <td>
      <div class="pagination-centered">
        <%= link_to glyph(:remove), group_url(group), method: :delete, remote: true, confirm: 'Are you sure you want to delete this group?', class: 'btn btn-danger btn-lg' %>
      </div>
    </td>
  </tr>
<% end %>