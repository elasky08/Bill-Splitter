<!-- Group page. Includes list of items. -->

<!-- Header -->
<div class="page-header">
  <h1 id="group-name"><%= @group.name %></h2>
  <% if @group.owner == current_user %>
    <%= link_to "Edit Group", "#edit_group", class: "btn", id: "edit-group-link" %>
  <% else %>
    <%= link_to "View Members", "#view_members", class: "btn", id: "view-members-link" %>
  <% end %>
</div>

<!-- Items  -->
<table class="table table-bordered table-condensed", id="items-list" >
  <thead>
    <tr>
      <th>Item Name</th>
      <th>Cost</th>
      <th class="span2"></th>
    </tr>
  </thead>
  <tbody>
    <%= render "items/list" %>
  </tbody>
</table>

<%= link_to "Add Item", "#add_item", class: "btn btn-large", id: "new-item-link" %>
<%= link_to "Check Please!", group_membership_url(@group, @membership), class: "btn btn-large btn-success", id: "get-bill-link", remote: true %>

<!-- Edit group modal -->
<div class="modal fade" id="edit-group-modal" data-form="reset">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= render "groups/edit_form" %>
    </div>
  </div>
</div>

<!-- New item modal -->
<div class="modal fade" id="new-item-modal" data-form="temporary">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= render "items/new_form" %>
    </div>
  </div>
</div>

<!-- Blank modal for other forms -->
<%= render "layouts/blank_modal" %>
