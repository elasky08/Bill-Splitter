<!DOCTYPE html>
<html>
<head>
  <title>BillSplitter</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
  <body>

    <%= nav_bar fixed: :top, brand: "BillSplitter", responsive: true do %>
      <%= menu_group do %>
        <%= menu_item "Home", root_path %>
      <% end %>
      <%= menu_group pull: :right do %>
        <% if signed_in? %>
          <%= menu_item "#{current_user.name} [ #{current_user.email} ]", edit_user_registration_url(current_user) %>
          <%= menu_item "Log out", log_out_path %>
        <% end %>
      <% end %>
    <% end %>

    <div class="container">
      <%= bootstrap_flash %>
    	<%= yield %>
    </div>

  </body>
</html>
