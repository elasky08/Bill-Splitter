<div class="modal fade" id="bill-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Personal Bill</h4>
      </div>
      <div class="modal-body">
        <div class="alert alert-error" id="invalid-bill-input-error">One or more inputs are invalid</div>

        
        @items.each do 



        <p>Total items: $<span id="item-total"></span></p>
        <p>Tax: <input type="text" id="tax-pct" value="7.25"/> % </p>
        <p>Tip: <input type="text" id="tip-pct" value="15" /> % </p>
        <p>Total Bill: $<span id="total-bill"></span></p>
        <p>Split across <input type="text" id="num-people" value="4"/> people</p>
        <p class="bold">Each person owes $<span id="split-cost"></span></p>
        <button class="btn btn-info" id="recompute-bill">Compute new bill</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<h2>Your Personal Bill</h2>
<br>
<br>
<div class="hero-unit">
  <table class="table">
  	<thead>
      <tr>
        <th>Your Food</th>
        <th>What You Owe</th>
      </tr>
    </thead>	
    <tbody>

      <% @items.each do |item| %>

        <tr>
          <td><%=item%></td>
          <td>
            <%=item.cost%>
          </td>
        </tr>

      <% end %> 
    </tbody>
  </table>
</div>

<hr>
  <table>
  	
    <tbody>
        <tr>
          <td>You Owe: </td>
          <td>
          	<%=@items_total%></td>
        </tr>

 
    </tbody>
  </table>
 
  
